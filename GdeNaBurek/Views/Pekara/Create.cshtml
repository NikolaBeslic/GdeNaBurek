@model GdeNaBurek.ViewModels.PekaraFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj pekaru</h2>

@using (Html.BeginForm("Create", "Pekara"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.NazivPekare, "Naziv pekare")
        @Html.TextBoxFor(m => m.NazivPekare, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NazivPekare)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Adresa, "Adresa pekare")
        @Html.TextBoxFor(m => m.Adresa, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Adresa)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Grad, "Grad")
        @Html.DropDownListFor(m => m.Grad, new SelectList(Model.Gradovi, "Id", "NazivGrada"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Grad)
    </div>

    <button type="submit" value="Save" class="btn btn-primary">Sacuvaj</button>
}


